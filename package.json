{
  "name": "claudeck-monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-pty"
    ]
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:desktop": "pnpm --filter @claudeck/desktop dev",
    "dev:lp": "pnpm --filter @claudeck/lp dev",
    "build": "pnpm -r build",
    "build:desktop": "pnpm --filter @claudeck/desktop build",
    "build:lp": "pnpm --filter @claudeck/lp build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}
