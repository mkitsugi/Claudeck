{
  "name": "claudeck",
  "version": "0.1.0",
  "description": "Claudeck - Terminal application for Claude Code projects",
  "type": "module",
  "main": "dist-electron/main.js",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-pty"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite build && electron ."
  },
  "keywords": [
    "electron",
    "terminal",
    "xterm"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.claudeck.app",
    "productName": "Claudeck",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!dist/mac-arm64",
      "!dist/mac-x64",
      "!dist/*.dmg",
      "!dist/*.zip",
      "!dist/*.blockmap"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "mkitsugi",
      "repo": "Claudeck"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/node": "^22.10.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.10"
  }
}
